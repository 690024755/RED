//get-window "Delete Resources" | get-button OK | click
// add import
with [get-editor "TestFile.robot" | get-text-viewer] {
    set-caret-pos 2 44
    key-type "M1+/"
    key-type Enter
    type-text Res
    key-type "M1+SPACE"
    key-type Enter
    type-text [concat [replace $user_folder -old "\\" -new "/"] "/new_folder/resource.robot"]
    key-type "M1+s"
}
// verify problems
wait-for-warnings -amount 3 -times 4 -delay 500
// use QuickFix to add linked folder
get-view Problems | get-tree 
    | select "Warnings (3 items)/RED does not support importing resources located outside of workspace. Keywords from this resource will not be recognized. Try to use Quick Fix (Ctrl+1) to link folder into the project." 
    | key-type "M1+1"
with [get-window "Quick Fix"] {
    get-button Finish | click
}
// verify if linked folder exist
with [get-view "Project Explorer" | get-tree] {
    get-item -path "RobotProject/new_folder" | get-property caption | equals "new_folder" | verify-true
    get-item -path "RobotProject/new_folder" | get-property "getItemCount()" | equals 3 | verify-true
}
with [get-editor "TestFile.robot" | get-text-viewer] {
    set-caret-pos 4 19
    key-type "M1+s"
}
